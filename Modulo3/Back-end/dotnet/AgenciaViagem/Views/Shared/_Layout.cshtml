<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgenciaViagem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-dark">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mx-auto">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" height="140" src="~/img/logo2.png" alt="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="#navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse fix-mobil" id="navbarColor01">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Destinos">Destinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Promocoes">Promoções</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Viagem" asp-action="Index">Viagem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Faz" asp-action="Index">Passagem</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex flex-wrap bg-dark justify-content-center aligne-items-center">
        <div class="item">
            <img src="~/img/logo2.png" height="140" alt="logo" />
        </div>
        <div class="item">
            <h3>Inicio</h3>
            <a href="/" style="display: block; font-size: 1.4rem; color: #ccc;">Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Destinos" style="display: block; font-size: 1.4rem; color: #ccc;">Destinos</a>
            <a href="Promocoes" style="display: block; font-size: 1.4rem; color: #ccc;">Promoções</a>
        </div>
        <div class="item">
            <h3>Empresa</h3>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">Empresa</a>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">Contato</a>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">Blog</a>
        </div>
        <div class="item">
            <h3>Suporte</h3>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">FAQ</a>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">Telefones</a>
            <a href="#" style="display: block; font-size: 1.4rem; color: #ccc;">Chat</a>
        </div>
        <div class="item">
            <h3>Redes Sociais</h3>
            <a href="https://pt-br.facebook.com" class="fa fa-facebook"></a>
            <a href="https://twitter.com" class="fa fa-twitter"></a>
            <a href="https://www.instagram.com" class="fa fa-instagram"></a>
            
            <a href="https://br.linkedin.com/" class="fa fa-linkedin"></a>
            <a href="https://www.youtube.com/" class="fa fa-youtube"></a>
        </div>
    </footer>
    <div class="copy">
        &copy; 2022 Copyright - Monteiro Viagens
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
